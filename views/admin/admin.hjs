                                        <div class="header">
                                            <h4 class="title">添加新闻</h4>
                                            <p class="category">添加新的新闻</p>
                                        </div>
                                        <div class="content">
                                            <form id="createNewsForm">
                                                <div class="row form-group">
                                                    <input type="text" class="form-control news-title" placeholder="新闻标题" name="title">
                                                    <select class="news-type" name="type">
                                                        <option selected value="xw">新闻分类</option>
                                                        <option value="kj">科技分类</option>
                                                        <option value="sh">社会分类</option>
                                                        <option value="yl">娱乐分类</option>
                                                        <option value="zz">政治分类</option>
                                                        <option value="ty">体育分类</option>
                                                        <option value="ys">养身分类</option>
                                                        <option value="sy">实用链接</option>
                                                    </select>
                                                    <textarea name="content" id="news-content"></textarea>
                                                    <button type="submit" class="btn btn-large btn-success btn-fill pull-right">发布新闻</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <script>
                            function CKupdate(){
                                for ( instance in CKEDITOR.instances )
                                    CKEDITOR.instances[instance].updateElement();
                            }
                            $('#createNewsForm').submit(function(e) {
                                e.preventDefault();
                                CKupdate()
                                var self = $(this)
                                $.ajax({
                                    url: '/api/news/post',
                                    data: self.serialize(),
                                    method: 'post',
                                    success: function(data) {
                                        $('.newsBody').append(`
                                            <tr>
                                                <td>${data._id}</td>
                                                <td>${data.title}</td>
                                                <td>${data.created_at}</td>
                                                <td>${data.views}</td>
                                                <td>
                                                    <a href="#" data-id="${data._id}" class="deleteNews" onclick="deleteNews('${data._id}', this)">删除</a>
                                                </td>
                                            </tr>
                                        `)
                                        alert(`新闻 ${data.title} 发布成功！`)
                                    },
                                    error: function(err) {
                                        alert('发布失败')
                                    }
                                })
                            })
                            //get news list for management
                            $.get({
                                url: '/api/news/fetch',
                                success: function(data) {
                                    for (var i = 0; i < data.length; i++) {
                                        $('.newsBody').append(`
                                            <tr>
                                                <td>${data[i]._id}</td>
                                                <td>${data[i].title}</td>
                                                <td>${data[i].created_at}</td>
                                                <td>${data[i].views}</td>
                                                <td>
                                                    <a href="#" data-api="/api/deleteNews" data-id="${data[i]._id}" class="deleteNews" onclick="deleteNews('${data[i]._id}', this)">删除</a>
                                                </td>
                                            </tr>
                                        `)
                                    }
                                }
                            })
                            //delete news button
                            function deleteNews(id, el) {
                                $.ajax({
                                    method: 'post',
                                    url: '/api/news/delete',
                                    data: { id: id},
                                    success: function (data) {
                                        alert(`新闻已删除`);
                                        $(el).parents('tr').remove();
                                    },
                                    error: function (data) {
                                        alert('删除失败')
                                    }
                                })
                            }
                        </script>
